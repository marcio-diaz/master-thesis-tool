Executable         fthl-spass
  Main-is:             fthl-spass.hs
  Build-Depends:       base >= 3, 
                       mtl >= 1, 
                       containers,
                       prepo
  Hs-Source-Dirs:      src
  ghc-options:         -O2 -Wall 
  ghc-prof-options:    -auto-all

  if flag(static)
    ghc-options: -static -optl-static -optl-pthread



